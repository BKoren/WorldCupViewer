<local:Base
    x:Class="WorldCup.WPF.Settings.StartUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:WorldCup.WPF.Windows"
    xmlns:external="clr-namespace:WorldCup.WPF.Settings"
    WindowStartupLocation="CenterScreen"
    Icon="/Images/FormFavicon.ico"
    Title="Settings"
    MinWidth="400" MinHeight="325">

    <Window.Resources>
        <sys:Double x:Key="btnFontSize">1</sys:Double>

        <Style x:Key="btn" TargetType="Button">
            <Setter Property="FontSize" Value="{DynamicResource btnFontSize}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <external:BaseContent 
        x:Name="BaseContent" 
    />

</local:Base>
