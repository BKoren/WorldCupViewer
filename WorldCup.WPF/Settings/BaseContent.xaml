<UserControl x:Class="WorldCup.WPF.Settings.BaseContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Loaded="Window_Loaded"
             SizeChanged="Window_SizeChanged">

    <UserControl.Resources>
        <Style x:Key="ComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="10, 0, 0, 5"/>
            <Setter Property="Margin" Value="0, 0, 0, 5"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <sys:Double x:Key="ComboBoxItemFontSize">1</sys:Double>

        <Style x:Key="ComboBoxItems" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource ComboBoxItemFontSize}" />
        </Style>

        <Style x:Key="Viewbox" TargetType="Viewbox">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>

        <Style x:Key="ViewboxText" TargetType="TextBlock">
            <Setter Property="Margin" Value="0, 10, 0, 0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe Print"/>
        </Style>

        <Style x:Key="btnBorder" TargetType="Border">
            <Setter Property="Margin" Value="50, 0, 50, 10"/>
            <Setter Property="MaxWidth" Value="155"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush 
                ImageSource="/Images/WPF_Background.jpg"
                Opacity="0.60"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Viewbox 
                x:Name="header"
                Stretch="Uniform">
            <TextBlock        
                    x:Name="title"
                    FontWeight="Bold"
                    FontFamily="Segoe Print"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"
                />
        </Viewbox>

        <Grid 
            Grid.Row="1"
            x:Name="content">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Viewbox                 
                    x:Name="labelScreen"
                    Style="{StaticResource Viewbox}">
                <TextBlock
                        x:Name="labelScreenText"                    
                        Style="{StaticResource ViewboxText}"
                    />
            </Viewbox>

            <Viewbox
                    Grid.Row="2"
                    x:Name="labelLanguage"
                    Style="{StaticResource Viewbox}">
                <TextBlock
                        x:Name="labelLanguageText"                    
                        Style="{StaticResource ViewboxText}"
                    />
            </Viewbox>

            <Viewbox
                    Grid.Row="4"
                    x:Name="labelCategory"
                    Style="{StaticResource Viewbox}">
                <TextBlock
                        x:Name="labelCategoryText"                    
                        Style="{StaticResource ViewboxText}"
                    />
            </Viewbox>

            <ComboBox
                    Grid.Row="1"             
                    x:Name="comboBoxScreen"
                    Style="{StaticResource ComboBox}"
                    SelectionChanged="ScreenOption_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock 
                                Text="{Binding}" 
                                Style="{StaticResource ComboBoxItems}" 
                            />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <ComboBox
                    Grid.Row="3"
                    x:Name="comboBoxLanguage"
                    Style="{StaticResource ComboBox}"
                    SelectionChanged="LanguageOption_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock 
                                Text="{Binding}" 
                                Style="{StaticResource ComboBoxItems}" 
                            />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <ComboBox
                    Grid.Row="5"
                    x:Name="comboBoxCategory"
                    Style="{StaticResource ComboBox}"
                    SelectionChanged="CategoryOption_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock 
                            Text="{Binding}" 
                            Style="{StaticResource ComboBoxItems}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

        </Grid>

        <Viewbox 
            x:Name="footer"
            Grid.Row="2"
            Stretch="Uniform"
            Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <Border              
                        x:Name="UpdateBackPosition"
                        Style="{StaticResource btnBorder}">
                        <StackPanel
                            x:Name="UpdateBack"
                        />
                    </Border>
                </StackPanel>

                <StackPanel
                    Grid.Column="1">
                    <Border                        
                        x:Name="StartUpApplyPosition"
                        Style="{StaticResource btnBorder}">
                        <StackPanel 
                            x:Name="StartUpApply"                        
                        />
                    </Border>
                </StackPanel>

                <StackPanel
                    Grid.Column="2">
                    <Border   
                        x:Name="UpdateApplyPosition"
                        Style="{StaticResource btnBorder}">
                        <StackPanel    
                            x:Name="UpdateApply"                        
                         />
                    </Border>
                </StackPanel>

            </Grid>
        </Viewbox>
        
    </Grid>
</UserControl>
