<local:Base
        x:Class="WorldCup.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:WorldCup.WPF.Windows"
        Icon="/Images/FormFavicon.ico"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Main Menu"
        MinWidth="400" MinHeight="300"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>
        
        <sys:Double x:Key="BtnFontSize">1</sys:Double>

        <Style x:Key="BtnAppFont" TargetType="Button">
            <Setter Property="FontSize" Value="{DynamicResource BtnFontSize}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <sys:Double x:Key="BtnWindowHeight">1</sys:Double>
        <sys:Double x:Key="BtnWindowWidth">1</sys:Double>

        <Style x:Key="BtnWindow" TargetType="Button">
            <Setter Property="FontSize" Value="{DynamicResource BtnFontSize}"/>
            <Setter Property="Height" Value="{DynamicResource BtnWindowHeight}"/>
            <Setter Property="Width" Value="{DynamicResource BtnWiBtnWindowWidthdth}"/>

            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BtnWindowBorder" TargetType="Border">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Height" Value="{DynamicResource BtnWindowHeight}"/>
            <Setter Property="Width" Value="{DynamicResource BtnWindowWidth}"/>
        </Style>

        <Style x:Key="BtnWindowText" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="None"/>
        </Style>

        <Style x:Key="FavoritesText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe Print"/>
            <Setter Property="FontWeight" Value="UltraBold"/>
        </Style>

        <Style x:Key="BtnAppBorder" TargetType="Border">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="layoutBorderFavorites" TargetType="Border">
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Padding" Value="15, 0, 15, 0"/>
            <Setter Property="BorderThickness" Value="2"/>            
            <Setter Property="BorderBrush" Value="Black"/>            
            <Setter Property="Background" Value="LightGray"/>            
        </Style>
        
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush 
                ImageSource="/Images/WPF_Background.jpg"
                Opacity="0.65"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>


        <Viewbox 
            x:Name="header">
            <TextBlock        
                x:Name="title"               
                FontWeight="Bold"
                FontFamily="Segoe Print"
                Margin="0, 10, 0, 0"
                TextWrapping="Wrap"
            />
        </Viewbox>

        <Grid
            Grid.Row="1"
            x:Name="content">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>                
                <ColumnDefinition x:Name="FavoritesColumn"/>                
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border                 
                MaxWidth="175"                
                Style="{StaticResource BtnWindowBorder}">
                <Button
                    Style="{StaticResource BtnWindow}"
                    Click="BtnSetTeam_Click">
                    <TextBlock
                        x:Name="btnSetTeam"
                        Style="{StaticResource BtnWindowText}"
                    />
                </Button>
            </Border>

            <Border 
                MaxWidth="175"
                Grid.Row="1"
                Style="{StaticResource BtnWindowBorder}">
                <Button 
                    Style="{StaticResource BtnWindow}"
                    Click="BtnSetMatch_Click">
                    <TextBlock
                            x:Name="btnSetMatch"
                            Style="{StaticResource BtnWindowText}"
                        />
                </Button>
            </Border>

            <Border
                Grid.Column="1"
                x:Name="layoutFavoriteTeam"
                Style="{StaticResource layoutBorderFavorites}">
                <Viewbox 
                    HorizontalAlignment="Center">
                    <TextBlock                    
                        x:Name="FavoriteTeamText"
                        Style="{StaticResource FavoritesText}"
                    />
                </Viewbox>
            </Border>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                x:Name="layoutFavoriteMatch"
                Style="{StaticResource layoutBorderFavorites}">
                <Viewbox 
                    HorizontalAlignment="Center">
                    <TextBlock
                        x:Name="FavoriteMatchText"    
                        Style="{StaticResource FavoritesText}"
                    />
                </Viewbox>
            </Border>
        </Grid>

        <Grid 
            Grid.Row="2"
            x:Name="footer"
            Margin="0, 7.5, 0, 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border                                                 
                HorizontalAlignment="Left"
                Style="{StaticResource BtnAppBorder}">
                <Button
                    x:Name="btnSettings"                                                      
                    Style="{StaticResource BtnAppFont}"
                    Click="BtnSettings_Click"
                />
            </Border>


            <Border 
                Grid.Column="1"                
                HorizontalAlignment="Right"
                Style="{StaticResource BtnAppBorder}">
                <Button
                    x:Name="btnDetailStatistics"
                                    
                    Style="{StaticResource BtnAppFont}"
                    Click="BtnDetailStatistics_Click">
                    <TextBlock
                        x:Name="btnDetailStatisticsText"
                        TextWrapping="Wrap"       
                        TextTrimming="None"
                    />
                </Button>
            </Border>
            
        </Grid>
    </Grid>
</local:Base>
