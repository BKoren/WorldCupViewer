<local:Base
        x:Class="WorldCup.WPF.Windows.TeamSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCup.WPF.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="/Images/FormFavicon.ico"
        Title="Favorite Team"
        MinWidth="400" MinHeight="300"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>

        <sys:Double x:Key="fontSize">1</sys:Double>
        <sys:Double x:Key="itemSize">1</sys:Double>

        <Style x:Key="btn" TargetType="Button">
            <Setter Property="FontSize" Value="{DynamicResource fontSize}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="btnBorder" TargetType="Border">
            <Setter Property="Margin" Value="50, 0, 50, 20"/>
            <Setter Property="MaxWidth" Value="150"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

    </Window.Resources>
    
    <Grid>
        
        <Grid.Background>
            <ImageBrush 
                ImageSource="/Images/WPF_Background.jpg"
                Opacity="0.65"
            />
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Viewbox
            x:Name="header">
            <TextBlock
                x:Name="title"
                FontFamily="Segoe Print"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="10"
            />
        </Viewbox>

        <ComboBox
            Grid.Row="1"
            x:Name="teamSelector"            
            SelectionChanged="TeamSelector_SelectedIndexChanged"
            VerticalAlignment="Top"
            Margin="25, 5, 25, 0"  
            Padding="5, 5, 0, 0"
            FontWeight="Bold"
            FontSize="{DynamicResource fontSize}">
            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="FontSize" Value="{DynamicResource fontSize}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </ComboBox.ItemContainerStyle>
        </ComboBox>

        <Grid
            Grid.Row="2"
            x:Name="footer">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border                
                HorizontalAlignment="Left"
                Style="{StaticResource btnBorder}">
                <Button
                    x:Name="btnBack"
                    Style="{StaticResource btn}"
                    Click="BtnBack_Click">
                </Button>
            </Border>

            <Border
                Grid.Column="1"
                HorizontalAlignment="Right"                
                Style="{StaticResource btnBorder}">
                <Button
                    x:Name="btnApply"
                    Style="{StaticResource btn}"
                    Click="BtnApply_Click">
                </Button>
            </Border>
            
        </Grid>
    </Grid>
    
</local:Base>
