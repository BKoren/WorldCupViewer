<UserControl x:Class="WorldCup.WPF.Controls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:WorldCup.WPF.Controls"
             mc:Ignorable="d" 
             VerticalAlignment="Center"               
             MaxHeight="125"             
             MaxWidth="125"
             Background="LightGray"
             Margin="2"
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
             Loaded="UserControl_Loaded"
             SizeChanged="UserControl_SizeChanged">


    <UserControl.Resources>
        <sys:Double x:Key="FontSize">1</sys:Double>

        <Style x:Key="NumberSize" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSize}"/>
            <Setter Property="FontFamily" Value="Segoe Print"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="Text" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe Print"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="layoutText" TargetType="Viewbox">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="3, 0, 3, 0"/>
        </Style>

    </UserControl.Resources>

    <Border
        BorderBrush="Black"
        BorderThickness="2">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Image                
                x:Name="PlayerImg"    
                Stretch="Fill">
            </Image>

            <Viewbox
                Grid.Row="1"
                x:Name="PlayerName"                
                Style="{StaticResource layoutText}">
                <TextBlock                
                    x:Name="PlayerNameValue"
                    Style="{StaticResource Text}"
                />
            </Viewbox>

            <Grid
                Grid.Row="2"
                HorizontalAlignment="Center"
                x:Name="PlayerShirtNumber">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <Viewbox               
                    Margin="3, 0, 0, 0"
                    Style="{StaticResource layoutText}">
                    <TextBlock
                        x:Name="PlayerShirtNumberText"
                        Style="{StaticResource Text}"
                    />
                </Viewbox>

                <Viewbox
                    Grid.Column="1"
                    MaxHeight="20"
                    Style="{StaticResource layoutText}">
                    <TextBlock
                        x:Name="PlayerShirtNumberValue"
                        Style="{StaticResource NumberSize}"
                    />
                </Viewbox>

            </Grid>

            <Image            
                x:Name="StarImg"               
                MaxHeight="25"
                MaxWidth="25"
                Margin="0, 0, 5, 0"
                Width="auto"
                Height="auto"
                HorizontalAlignment="Right">
            </Image>
        </Grid>
    </Border>
</UserControl>
