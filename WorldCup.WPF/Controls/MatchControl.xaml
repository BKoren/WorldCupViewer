<UserControl x:Class="WorldCup.WPF.Controls.MatchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:WorldCup.WPF.Controls"
             Background="white"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="1000"
             Width="auto" Height="auto" MinHeight="30"
             Loaded="Control_Loaded"    
             SizeChanged="Control_SizeChanged"
             MouseLeftButtonDown="Control_MouseLeftButtonDown">

    <UserControl.Resources>

        <sys:Double x:Key="fontSize">1</sys:Double>

        <Style x:Key="Text" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="{DynamicResource fontSize}"/>
        </Style>

        <Style x:Key="innerBorder" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Padding" Value="3"/>
        </Style>

    </UserControl.Resources>

    <Border         
        Padding="3"
        BorderBrush="Black"
        BorderThickness="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="homeTeamColumn"/>
                <ColumnDefinition x:Name="scoreColumn"/>
                <ColumnDefinition x:Name="awayTeamColumn"/>
            </Grid.ColumnDefinitions>

            <Border                 
                Grid.Column="0"
                Style="{StaticResource innerBorder}">
                <TextBlock
                    x:Name="homeTeam"
                    Style="{StaticResource Text}"
                />
            </Border>

            <Border 
                Grid.Column="1"
                Style="{StaticResource innerBorder}">
                <TextBlock                    
                    x:Name="score"                    
                    Style="{StaticResource Text}"
                />
            </Border>

            <Border 
                Grid.Column="2"
                Style="{StaticResource innerBorder}">
                <TextBlock
                    x:Name="awayTeam"
                    Style="{StaticResource Text}"
                />
            </Border>
            
        </Grid>
    </Border>
</UserControl>
